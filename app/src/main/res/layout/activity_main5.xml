<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="@color/material_on_background_disabled">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_error"
            app:title="@string/app_name"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="497dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:paddingTop="15dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextOffer"
                    android:layout_width="345dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="edit"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="delete"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/priceTextOffer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/descriptionTextOffer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:text="TextView" />

            <TextView
                android:id="@+id/datesTextOffer"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/localizationtextOffer"
                    android:layout_width="179dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:onClick="findPlace"
                    app:srcCompat="@drawable/ic_baseline_location_on_24" />
            </LinearLayout>

            <Button
                android:id="@+id/contactButtonOffer"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:onClick="contact"
                android:text=" mail " />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:onClick="call"
                android:text="call" />

            <TextView
                android:id="@+id/errorTextOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D50D0D" />
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>