<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity3">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="@color/material_on_background_disabled"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_error"
            app:title="@string/app_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/helloText"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="27sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/viewOffersButton"
                android:layout_width="176dp"
                android:layout_height="189dp"
                android:layout_weight="1"
                android:onClick="viewOffers"
                app:srcCompat="@drawable/download__1_" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/NewOfferButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="172dp"
                android:layout_height="202dp"
                android:layout_weight="1"
                android:onClick="newOffer"
                app:srcCompat="@drawable/newoffer" />
        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:onClick="randomFact"
            android:text="click for random cat fact" />

        <TextView
            android:id="@+id/randomCatText"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:inputType="textMultiLine" />


    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>